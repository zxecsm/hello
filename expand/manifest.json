{
  "manifest_version": 3,
  "name": "Save to Hello",
  "version": "1.0",
  "description": "Save current page to Hello",

  "permissions": ["tabs", "storage"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Hello",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
